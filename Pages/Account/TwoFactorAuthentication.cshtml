@page
@model BookwormsOnline.Pages.TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}
<h2>Two-Factor Authentication</h2>
<p>A verification code has been sent to your email. Please enter it below to complete login.</p>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Code"></label>
        <input asp-for="Input.Code" class="form-control" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Verify Code</button>
</form>
